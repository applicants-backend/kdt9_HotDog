<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>용품 나눔</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script>
    </script>
    <style>
        .modal-body{
        display: flex;
        justify-content: center;
    }
      </style>
</head>
<body>
  <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
    글쓰기
  </button>
  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">게시글 작성</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form id="write-form">
            <label for="title">제목</label>
            <input type="text" id="title"/><br/>
            <label for="content">내용</label>
            <textarea type="text" id="content"></textarea><br/>
            <label for="chooseFile"></label>
            <div class="imgBtn"><input type="file" id="chooseFile" name="chooseFile" onchange="loadFile(this)"></div>
            <button type="button" onclick="writeShare()">작성완료</button>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
    
    <table class="table TableBox">
      <thead>
        <tr>
          <th scope="col">제목</th>
          <th scope="col">내용</th>
          <th scope="col">날짜</th>
          <th scope="col">글쓴이</th>
          <th scope="col">사진</th>
          <th scope="col">수정/삭제</th>
        </tr>
      </thead>

    </table>

     

    <script>
        async function writeShare() {
            const title = document.querySelector('#title').value
            const content = document.querySelector('#content').value
            const data = {
                title, content
            }
            try {
                const res = await axios ({
                    method:'POST',
                    url : '/shareCommit',
                    data
                })
                console.log(res)
            } catch (error) {
                console.log(error)
            }
        }
        function loadFile (input) {
          const file = input.files[0];
        }
    </script>
