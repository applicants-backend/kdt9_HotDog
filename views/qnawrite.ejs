<!DOCTYPE html>
<html lang="ko">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/images/7Tf1NS6R.ico" type="image/x-icon" sizes="32x32">
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <link rel="icon" href="../images/HotDog-Logo.png" type="image/x-icon" sizes="32x32">
    <title>Q&A</title>
    <style>
        body {
            font-family: 'Comic Sans MS', sans-serif;
            background-color: #f0f0f0;
            margin: 0;
            padding: 0;
            background-color: #f4e0d6;
        }

        h1 {
            text-align: center;
            color: #333;
            margin-top: -35px;
        }

        #boardForm-container {
            width: 80%;
            max-width: 600px;
            margin: 0 auto;
            background-color: #fff;
            padding: 65px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            margin-top: 80px;
        }

        label {
            font-weight: bold;
        }

        input[type="text"],
        textarea {
            width: 100%;
            padding: 10px;
            margin-bottom: 35px;
            border: 1px solid #ccc;
            border-radius: 4px;
            resize: none;
        }

        button {
            padding: 10px 20px;
            background-color: #DCADA4;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        /* button[type="button"]:first-child {
            background-color: #DCADA4;
        }

        button[type="button"]:first-child:hover {
            background-color: #d69a8e;
        } */
        
        button:hover {
            background-color: #d69a8e;
        }

        button[type="button"]:last-child {
            background-color: #DCADA4;
            margin-left: 10px;
        }

        button[type="button"]:last-child:hover {
            background-color: #d69a8e;
        }
        #button {
            display: flex;
            justify-content: center;
            margin-top: 90px;
        }
        @media (max-width: 768px) {
        h1 {
            margin-top: -15px;
        }

            /* 폼 높이는 그대로 유지하고 다른 스타일만 조정 */
        #boardForm-container {
            width: 80%;
            padding: 30px;
        }
         input[type="text"], textarea {
        display: block; /* 블록 레벨로 변경 */
        margin: 0 auto; /* 가운데 정렬 */
        text-align: center; /* 텍스트 가운데 정렬 */
        padding-left: 0;
    }

        input[type="text"],
        textarea {
            margin-bottom: 20px;
        }

        #button {
            margin-top: 60px;
        }
    }
    </style>
</head>

<body>
    <div id="boardForm-container">
        <h1>Q&A 등록</h1>
        <form id="boardForm">
            <div>
                <!-- 'title' 속성 값을 수정 -->
                <label for="title">제목</label>
                <input type="text" name="qna-title" id="title">
            </div>
            <div>
                <!-- 'contents' 속성 값을 수정 -->
                <label for="contents">내용</label><br>
                <textarea name="qna-contents" id="contents" cols="30" rows="10"></textarea>
            </div>
            <div id="button">
            <button type="button" onclick="qnaPost()">글싸기</button>
            <button type="button" onclick="location.href='/boards/qna'">목록으로</button>
        </div>
        </form>

    </div>

    <script>
        const title = document.querySelector("#title");
        const contents = document.querySelector("#contents");
        const form = document.forms["#boardForm"]
        const token = window.localStorage.getItem("token");
        async function qnaPost() {
                console.log(token);
                if (!token) {
                    alert("로그인 해주세요.");
                    return;
                }
                console.log(title.value)
                if (!title.value) {
                    alert("제목을 입력해주세요.");
                    return;
                }

                if(!contents.value) {
                    alert("내용을 입력해주세요.");
                    return;
                }
                const data={
                    title:title.value,
                    contents:contents.value,
                    token: token,
                }
                try {
                const res = await axios({
                method:"POST",
                url:"/boards/qna",
                data
                })
                console.log(res.data.result.userid);
                if(res.data.data){
                    alert('글작성 완료!')
                    document.location.href='/boards/qna';
                }
                } catch (error) {
                    console.log(error);
                }

        }
        
    </script>
</body>

</html>
